{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@pinia/colada": ["../src/index.ts"],
      "@pinia/colada-plugin-retry": ["../plugins/retry/src/index.ts"]
    },
    "types": ["unplugin-vue-router/client"],
    "noEmit": true
  },
  "include": [
    "env.d.ts",
    "./typed-router.d.ts",
    "src",
    "src/**/*.vue",
    "../src"
  ],
  "exclude": ["src/**/__tests__/*"]
}
